[Unit]
Description=YouTube Keyword Search App (Streamlit)
After=network.target

[Service]
Type=simple
User=ytapp
Group=ytapp
WorkingDirectory=/home/ytapp/youtube-search
ExecStart=/home/ytapp/youtube-search/venv/bin/streamlit run app.py --server.port 8501 --server.address 0.0.0.0
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
